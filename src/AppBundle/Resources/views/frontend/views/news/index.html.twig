{% extends '@frontend/base.html.twig' %}

{% block body %}

    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">News page</h1>
        </div>
    </div>
    <!-- /.row -->

    {% if results is not empty %}
        {% set count = 0 %}
        {% for key,item in results %}
            <!-- Projects Row -->
            {% if count % 3 == 0 %}
            <div class="row">
            {% endif %}
                {% set count = count + 1 %}
                <div class="col-md-4 portfolio-item">
                    <a href="#">
                        <img class="img-responsive" src="{{ item.file ? item.file.file() | imageStyle('news_crop_thumb', 360, 206) : '' }}" itemprop="thumbnail" alt="">
                    </a>
                    <h4>
                        <a href="{{ path('news_detail_page', {'slug' : item.slug }) }}">{{ item.name }}</a>
                    </h4>
                    <p>{{ item.description }}</p>
                </div>
            {% if count % 3 == 0  %}
            </div>
            {% endif %}
        {% endfor %}
    <!-- /.row -->
    {% endif %}


    <hr>

    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">

            <!--Pagination -->
            {{ pagination | raw }}
            <!--END Pagination -->

        </div>
    </div>
    <!-- /.row -->

    <hr>

{% endblock %}