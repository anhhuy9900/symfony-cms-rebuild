{% extends '@frontend/base.html.twig' %}

{% block body %}

<div class="container-user">
    <h1 class="well">Registration Form</h1>
    <div class="col-lg-12 well">
        <div class="row">
            {{ form_start(form, {'attr': {'id': 'form-register', 'role': 'form-register'}}) }}
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>FullName</label>
                        {{ form_widget(form.fullname, {'attr': {'class': 'form-control','placeholder': 'Fullname'}, 'id':'register_fullname'}) }}
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder': 'Email'}, 'id':'register_email'}) }}
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        {{ form_widget(form.password, {'attr': {'class': 'form-control','placeholder': 'Password'} , 'id':'register_password'}) }}
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control','placeholder': 'Confirm Password'}, 'id':'register_confirm_password'}) }}
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control','placeholder': 'Phone'} , 'id':'register_phone'}) }}
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        {{ form_widget(form.address, {'attr': {'class': 'form-control','placeholder': 'Address'}, 'id':'register_address'}) }}
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        {{ form_widget(form.gender, {'attr': {'class': 'form-control','placeholder': 'Gender'}, 'id':'register_gender'}) }}
                    </div>
                    <button type="button" id="submit-form-register" class="btn btn-lg btn-info">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<div id="popup-register" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Errors Message</h4>
            </div>
            <div class="modal-body">

            </div>
        </div>

    </div>
</div>

{% endblock %}