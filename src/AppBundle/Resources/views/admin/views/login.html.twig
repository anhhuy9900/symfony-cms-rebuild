<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>{% block title %}Login dashboard - Admin {% endblock %}</title>
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    {% block stylesheets %}
        {% stylesheets
        'bundles/app/admin/css/bootstrap.min.css'
        'bundles/app/admin/font-awesome/4.2.0/css/font-awesome.min.css'
        'bundles/app/admin/fonts/fonts.googleapis.com.css'
        'bundles/app/admin/css/ace.min.css'
        'bundles/app/admin/css/ace-part2.min.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <!--[if lte IE 9]>-->
        {% stylesheets
        'bundles/app/admin/css/ace-rtl.min.css'
        'bundles/app/admin/css/ace-ie.min.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <!--<![endif]-->
    {% endblock %}
</head>

<body class="login-layout blur-login">
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <h1>
                            <i class="ace-icon fa fa-leaf green"></i>
                            <span class="red">Admin</span>
                            <span class="white" id="id-text2">Login</span>
                        </h1>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">
                        <div id="login-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header blue lighter bigger">
                                        <i class="ace-icon fa fa-coffee green"></i>
                                        Please Enter Your Information
                                    </h4>

                                    <div class="space-6"></div>

                                    {{ form_start(form, {'attr': {'id': 'admin-submit-login'}}) }}
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    {{ form_widget(form.username, {'attr': {'class': 'form-control','placeholder': 'Username'}}) }}
                                                    <i class="ace-icon fa fa-user"></i>
                                                </span>
                                            </label>

                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    {{ form_widget(form.password, {'attr': {'class': 'form-control','placeholder': 'Password'}}) }}
                                                    <i class="ace-icon fa fa-lock"></i>
                                                </span>
                                            </label>

                                            <div class="space"></div>

                                            <div class="clearfix">
                                                <label class="inline">
                                                    {{ form_widget(form.remember, {'attr': {'class': 'ace'}}) }}

                                                    <span class="lbl"> Remember Me</span>
                                                </label>

                                                <button type="button" id="submit-form-adlogin" class="width-35 pull-right btn btn-sm btn-primary">
                                                    <i class="ace-icon fa fa-key"></i>
                                                    <span class="bigger-110">Login</span>
                                                </button>
                                            </div>

                                            <div class="space-4"></div>
                                            
                                            {% if form_errors %}
                                            <ul>
                                                <li>{{ form_errors }}</li>
                                            </ul>
                                            {% endif %}

                                        </fieldset>
                                    {{ form_end(form) }}

                                    <div class="space-6"></div>

                                </div><!-- /.widget-main -->

                                <div class="toolbar clearfix"></div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.login-box -->

                    </div><!-- /.position-relative -->

                </div>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->

<!-- basic scripts -->

{# Block JS #}
{% block javascripts %}

    {% javascripts
    '@AppBundle/Resources/public/admin/js/jquery.2.1.1.min.js'
    '@AppBundle/Resources/public/admin/js/respond.min.js'
    '@AppBundle/Resources/public/admin/js/html5shiv.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        jQuery(function($) {
            $(document).on('click', '.toolbar a[data-target]', function(e) {
                e.preventDefault();
                var target = $(this).data('target');
                $('.widget-box.visible').removeClass('visible');//hide others
                $(target).addClass('visible');//show target
            });

            $("#submit-form-adlogin").on('click',function(){
                $("#admin-submit-login").submit();
            });
        });

        //you don't need this, just used for changing background
        jQuery(function($) {
            $('#btn-login-dark').on('click', function(e) {
                $('body').attr('class', 'login-layout');
                $('#id-text2').attr('class', 'white');
                $('#id-company-text').attr('class', 'blue');

                e.preventDefault();
            });
            $('#btn-login-light').on('click', function(e) {
                $('body').attr('class', 'login-layout light-login');
                $('#id-text2').attr('class', 'grey');
                $('#id-company-text').attr('class', 'blue');

                e.preventDefault();
            });
            $('#btn-login-blur').on('click', function(e) {
                $('body').attr('class', 'login-layout blur-login');
                $('#id-text2').attr('class', 'white');
                $('#id-company-text').attr('class', 'light-blue');

                e.preventDefault();
            });
        });
    </script>
{% endblock %}
{# End Block JS #}

</body>
</html>
